<%- include ("./partials/header") %>
<div class="container">
  <div class="row" style="display: flex; justify-content: space-between;">
    <div class="column-md-6">
      <img
        style="margin-top: 20px; box-shadow: 5px 8px 10px #cbc6cf;"
        ;
        src=" https://c0.wallpaperflare.com/preview/205/953/174/registration-login-keyboard-hand-thumbnail.jpg"
      />
      <p
        class="lead"
        style="font-size: medium; margin-top: 30px; padding-left: 30px;"
      >
        <strong>Don't have an account?</strong
        ><a href="/signup" style="color: #3593a6;"> Sign Up</a>
      </p>
    </div>
    <div class="col-md-6">
      <div class="form-style-8">
        <h2>Login to your account</h2>
        <form>
          <input type="email" name="field2" placeholder="Email" />
          <input type="password" name="field3" placeholder="Password" />
          <h6 style="margin-top: 15px;">Forgot Password?</h6>
          <input
            type="button"
            style="border-radius: 10px; margin-top: 20px;"
            value="Login"
          />
        </form>
        <div style="margin-top: 40px;">
          <h4 style="color: #525054;">Or login with</h4>
          <i
            class="fa fa-facebook-official fa-2x"
            style="color: #2d094a;"
            aria-hidden="true"
          ></i>
          <i
            class="fa fa-twitter-square fa-2x"
            style="padding-left: 15px; color: #2d094a;"
            aria-hidden="true"
          ></i>
          <i
            class="fa fa-linkedin-square fa-2x"
            style="padding-left: 15px; color: #2d094a;"
            aria-hidden="true"
          ></i>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ("./partials/footer") %>
